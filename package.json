{
  "name": "innozverse",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade monorepo for innozverse: web, mobile, and API",
  "scripts": {
    "dev": "turbo run dev --filter=!@innozverse/mobile",
    "dev:web": "turbo run dev --filter=@innozverse/web",
    "dev:api": "turbo run dev --filter=@innozverse/api",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.13.2"
}
